<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://media.istockphoto.com/vectors/female-traveller-with-backpack-and-suitcase-and-male-receptionist-on-vector-id1151387992?k=20&m=1151387992&s=612x612&w=0&h=_bXViOThSozNHi2E9a6hR7UOkGAa-kRbvkuqAvd5I_I="
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                
                <div class="text-center text-lg-start mb-3" >
                 <p class="small fw-bold mt-2 pt-1 mb-0 text-danger"> @ViewData["Message"]</p>
                </div>

                <form asp-controller="home" asp-action="BookingPage">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="email" id="email" class="form-control form-control-lg"
                               placeholder="Email" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input type="password" id="password" class="form-control form-control-lg"
                               placeholder="Password" />
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="#!"
                                                      class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>